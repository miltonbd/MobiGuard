<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground" android:padding="5dp" android:gravity="center_vertical">

    <TextView
        android:id="@+id/textViewSerialNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:text="101"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="left" />

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="1" android:padding="@dimen/dim10dp" />

        <include layout="@layout/call_sms_select" />


</LinearLayout>